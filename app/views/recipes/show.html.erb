<div class="album py-5">
    <div class="container">
        <h1 class="page-title">レシピ詳細</h1>
        <div class="card mb-4 shadow-sm">
            <div class="card-body">
                <div class="row">
                    <div class="col-6">
                        <div class="card-img-top" data-src="holder.js/100px225?theme=thumb&bg=55595c&fg=eceeef&text=Thumbnail" alt="Card image cap">
                            <% if @recipe.image_recipe? %>
                                <%= image_tag @recipe.image_recipe.url, class: "card-image-show" %>
                            <% else %>
                                <%= image_tag "/assets/default.jpg", class: "card-image-show" %>
                            <% end %>
                        </div>
                        <div class="card-text">
                            <table class="table table-borderless mt-5">
                                <tr>
                                    <th>Title:</th>
                                    <td>
                                        <%= @recipe.title %>
                                    </td>
                                </tr>
                                <tr>
                                    <th>Description:</th>
                                    <td>
                                        <%= @recipe.description %>
                                    </td>
                                </tr>
                                <tr>
                                    <th>User:</th>
                                    <td>
                                        <%= @recipe.user.name %>
                                    </td>
                                </tr>
                            </table>
                        </div>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                <%= link_to "編集", edit_recipe_path, class: "btn btn-sm btn-outline-secondary" %>
                                <%= link_to "削除", recipe_path, method: :delete, class: "btn btn-sm btn-outline-secondary" %>
                            </div>
                            <div class="like-btn">
                                <% if current_user.already_liked?(@recipe) %>
                                    <%= link_to recipe_likes_path(@recipe), method: :delete do %>
                                        <i class="fas fa-heart"></i>
                                    <% end %>
                                <% else %>
                                    <%= link_to recipe_likes_path(@recipe), method: :post do %>
                                        <i class="far fa-heart"></i>
                                    <% end %>
                                <% end %>
                                <%= @recipe.likes.count %>
                            </div>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="card-text">
                            <table>
                                <tr>
                                    <th>Content:</th>
                                    <td>
                                        <%= @recipe.content %>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>