<div class="album py-5">
    <div class="container">
        <h1 class="page-title">ユーザー詳細</h1>
        <div class="card mb-4 shadow-sm">
            <div class="card-body">
                <div class="row">
                    <div class="col-6">
                        <div class="card-img-top" data-src="holder.js/100px225?theme=thumb&bg=55595c&fg=eceeef&text=Thumbnail" alt="Card image cap">
                            <% if @user.image_user? %>
                                <%= image_tag @user.image_user.url, class: "card-image-show" %>
                            <% else %>
                                <%= image_tag "/assets/default.jpg", class: "card-image-show" %>
                            <% end %>
                        </div>
                        <div class="card-text">
                            <table class="table table-borderless mt-5">
                                <tr>
                                    <th>name:</th>
                                    <td>
                                        <%= @user.name %>
                                    </td>
                                </tr>
                                <tr>
                                    <th>email:</th>
                                    <td>
                                        <%= @user.email %>
                                    </td>
                                </tr>
                            </table>
                        </div>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                <%= link_to "編集", edit_user_path, class: "btn btn-sm btn-outline-secondary" %>
                            </div>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="card-text">
                            <table>
                                <tr>
                                    <th>Profile:</th>
                                    <td>
                                        <%= @user.profile %>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>