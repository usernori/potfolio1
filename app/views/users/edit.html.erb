<div class="container py-5">
    <h1 class="page-title">ユーザー情報編集</h1>
    <%= form_for @user do |form| %>
        <div class="form-group mt-5 mb-5">
            <%= form.file_field :image %>
        </div>
        <div class="form-group">
            <%= form.label :name, for: "exampleFormControlInput1" %>
            <%= form.text_field :name, class: "form-control", id: "exampleFormControlInput1" %>
        </div>
        <div class="form-group">
            <%= form.label :email, for: "exampleFormControlInput1" %>
            <%= form.text_field :email, class: "form-control", id: "exampleFormControlInput1" %>
        </div>
        <div class="form-group">
            <%= form.label :profile, for: "exampleFormControlTextarea1" %>
            <%= form.text_area :profile, class: "form-control", id: "exampleFormControlTextarea1 textarea", rows: "5" %>
        </div>
        <p><%= form.check_box :remove_image_user, class: "remove-image-checkbox mt-4" %>画像を削除する</p>
        <%= form.submit class: "btn-controll" %>
    <% end %>
</div>

<script>
    $(function(){
        $("textarea").autosize();
    });
</script>