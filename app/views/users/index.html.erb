<div class="album py-5">
    <div class="container">
        <h1 class="page-title">ユーザー一覧</h1>
        <div class="row">
            <% @users.each do |user| %>
                <div class="col-md-4">
                    <div class="card mb-4 shadow-sm">
                        <div class="card-img-top" data-src="holder.js/100px225?theme=thumb&bg=55595c&fg=eceeef&text=Thumbnail" alt="Card image cap">
                            <% if user.image_user? %>
                                <%= image_tag user.image_user.url, class: "card-image" %>
                            <% else %>
                                <%= image_tag "/assets/default.jpg", class: "card-image" %>
                            <% end %>
                        </div>
                        <div class="card-body">
                            <div class="card-text">
                                <table class="table table-borderless">
                                    <tr>
                                        <th>name:</th>
                                        <td>
                                            <%= user.name %>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <%= link_to "詳細", user_path(user), class: "btn btn-sm btn-outline-secondary" %>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            <% end %>
        </div>
    </div>
</div>

<div class="search-controll">
    <%= search_form_for @search do |f| %>
        <%= f.label :name %>
        <%= f.text_field :name_cont %>
        <%= f.submit "検索"%>
    <% end %>
</div>